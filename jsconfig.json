{
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.js",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.js",
    "scripts/seed.js",
    "app/layout.js",
    "app/page.js",
    "app/not-found.js"
  ],
  "exclude": ["node_modules"]
}
